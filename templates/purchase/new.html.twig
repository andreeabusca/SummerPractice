{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #1c1e26;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            color: #f2f2f2;
        }

        h1 {
            text-align: center;
            font-weight: bold;
            margin: 40px 0 20px;
            font-size: 2.5rem;
            background: linear-gradient(90deg, #00ffd0, #3b82f6, #9f7aea);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
        }

        .form-container {
            max-width: 750px;
            margin: auto;
            padding: 40px;
            background: linear-gradient(135deg, #252732, #2e303e);
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
            border: 1px solid #2f2f2f;
        }

        label {
            font-weight: 600;
            color: #c9c9d1;
            display: block;
            margin-bottom: 8px;
            margin-top: 20px;
        }

        input[type="email"],
        input[type="password"] {
            background-color: #2f313e;
            border: 1px solid #45475a;
            color: #ffffff;
            padding: 12px 16px;
            border-radius: 8px;
            width: 100%;
            transition: border 0.3s ease;
        }

        input[type="email"]:focus,
        input[type="password"]:focus {
            border: 1px solid #00d1ff;
            outline: none;
            background-color: #3b3e51;
        }

        .btn-custom {
            background: linear-gradient(90deg, #00ffd0, #3b82f6, #8a2be2);
            color: #ffffff !important;
            padding: 14px 32px;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 10px;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 12px rgba(0, 255, 208, 0.2);
            display: block;
            margin: 30px auto 0;
        }

        .btn-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(138, 43, 226, 0.5);
        }

        .btn-custom:active {
            transform: scale(0.98);
        }

        .alert {
            max-width: 750px;
            margin: 20px auto;
        }

        .checkbox label {
            font-size: 0.95rem;
            color: #bbb;
        }
    </style>
{% endblock %}

{% block title %}Create Concert{% endblock %}

{% block body %}
    <h1 class="mb-4" >Buy New Ticket</h1>
    <div class="form-container" align="center">
        <h2 class="h5" align="center"> Name: {{ details.name }} </h2>
        <h2 class="h5" align="center">Email: {{ user.email }}</h2>
        <h2 class="h5" align="center">Festival: {{ festival.name }} Price: {{ festival.price }}/ticket</h2>
        {{ form_start(form) }}
        {{ form_row(form.quantity) }}
        <div style="margin-top: 20px;">
            {{ form_row(form.save, {'attr': {'class': 'btn-custom'}}) }}
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
