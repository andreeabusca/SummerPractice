{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #1c1e26 !important;
            color: #f2f2f2;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            background: linear-gradient(90deg, #00ffd0, #3b82f6, #9f7aea);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
        }

        .nav-link.active,
        .nav-link:hover {
            color: #00d1ff !important;
            font-weight: 600;
        }


        h1 {
            text-align: center;
            font-weight: 700;
            font-size: 2.2rem;
            color: #00ffd0;
            margin-top: 3rem;
            margin-bottom: 2rem;
        }

        h5{
            text-align: center;
            font-weight: 700;
            font-size: 2.2rem;
            color: #00ffd0;
            margin-top: 3rem;
            margin-bottom: 2rem;
        }

        h2.h5 {
            color: #a0aec0;
            text-align: center;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .user-container {
            max-width: 900px;
            margin: 0 auto 60px;
            padding: 30px 25px;
            background: linear-gradient(135deg, #252732, #2e303e);
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
        }

        /* Buttons */
        .btn-custom {
            background: linear-gradient(145deg, #00ffd0, #3b82f6);
            color: #1c1e26 !important;
            padding: 10px 20px;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            box-shadow:
                0 4px 10px rgba(0, 255, 208, 0.4),
                0 6px 16px rgba(59, 130, 246, 0.4);
            margin: 0 0.5rem 0.5rem 0;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            background: linear-gradient(145deg, #3b82f6, #00ffd0);
            color: #1c1e26 !important;
        }

        .btn-custom:active {
            transform: translateY(0);
            background: linear-gradient(145deg, #008c9e, #1c3879);
        }

        a {
            color: #00ffd0;
            text-decoration: none;
            margin-right: 1rem;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            color: #ffffff;
        }

        thead th {
            background-color: #1e1f29;
            border-bottom: 2px solid #3b82f6;
            text-align: left;
            padding: 14px;
            font-weight: 700;
        }

        tbody td {
            padding: 12px 14px;
            border: 1px solid #444654;
            background-color: #252732;
        }

        tbody tr:hover {
            background-color: #2e303e;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        tbody .text-center {
            text-align: center;
            font-style: italic;
            color: #888;
            padding: 20px 0;
            background-color: #252732;
        }

        /* Pagination container */
        .d-flex.justify-content-center {
            margin-top: 2rem;
            display: flex;
            justify-content: center;
        }

        /* Pagination styling */
        .pagination {
            display: flex;
            gap: 8px;
            padding: 16px;
            background-color: #2c2f3a;
            border-radius: 12px;
            box-shadow:
                0 4px 12px #00ffd055,
                0 8px 16px #3b82f655,
                0 10px 20px #8a2be255;
        }

        .pagination li {
            list-style: none;
        }

        .pagination a,
        .pagination span {
            color: #ffffff;
            background: linear-gradient(145deg, #1e1f29, #292a36);
            border: 1px solid #444654;
            padding: 8px 14px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .pagination a:hover {
            background: linear-gradient(145deg, #00ffd0, #3b82f6);
            color: #1c1e26;
            transform: translateY(-2px);
        }

        .pagination .current {
            background: #8a2be2;
            color: #ffffff;
            font-weight: 700;
            border-color: transparent;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .user-container {
                padding: 20px 15px;
            }

            table, thead, tbody, th, td, tr {
                display: block;
                width: 100%;
            }

            thead tr {
                display: none;
            }

            tbody tr {
                margin-bottom: 15px;
                border: 1px solid #444654;
                border-radius: 8px;
                padding: 12px;
                background-color: #2e303e;
            }

            tbody td {
                border: none;
                padding: 8px 10px;
                position: relative;
                padding-left: 50%;
            }

            tbody td::before {
                position: absolute;
                top: 50%;
                left: 15px;
                width: 45%;
                padding-right: 10px;
                white-space: nowrap;
                transform: translateY(-50%);
                font-weight: 600;
                color: #a0aec0;
            }

            tbody td:nth-of-type(1)::before { content: "Name"; }
            tbody td:nth-of-type(2)::before { content: "Location"; }
            tbody td:nth-of-type(3)::before { content: "Start Date"; }
            tbody td:nth-of-type(4)::before { content: "End Date"; }
            tbody td:nth-of-type(5)::before { content: "Price"; }
        }
    </style>
{% endblock %}

{% block title %}User Details{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">ShowTime</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="{{ path('app_home_page') }}">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_festival') }}">Festivals</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_artist') }}">Artists</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_festival_artist') }}">Concerts</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_user') }}">Users</a></li>
                    {% endif %}
                    {% if not app.user %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_user_create') }}">Sign up</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Sign in</a></li>
                    {% endif %}
                    {% if app.user %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Log out</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_user_details',{userId: app.user.id}) }}">Account</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <h1 class="mb-4" >User Details</h1>
    <h2 class="h5" align="center">Email: {{ details.userId.email }}</h2>

    <div class="user-container">
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Student</th>
            </tr>
            </thead>
            <tbody>
            {%  if details is not null %}
                <tr>
                    <td>{{ details.name }}</td>
                    <td>{{ details.age }}</td>
                    <td>{{ details.isStudent ? 'Yes':'No' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No user details found!</td>
                </tr>
            {% endif %}
            </tbody>

        </table>
        <div class="d-flex justify-content-center">
            {% if is_granted('ROLE_NORMAL') %}
                <form action="{{ path('delete_user', { userId: app.user.id }) }}" method="get" onsubmit="return confirm('Are you sure?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                    <button class="btn-custom">Delete Account</button>
                </form>
            {% endif %}
        </div>
        <div class="user-container">
            <table>
                <thead>
                <tr>
                    <th>Purchase</th>
                    <th>Festival</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for purchases in pagination %}
                    <tr>
                        <td>{{ purchases.id }}</a></td>
                        <td>{{ purchases.festival.name }}</td>
                        <td>
                            {% if purchases.festival.enddate < "now"|date %}
                                <span >Expired</span>
                            {% else %}
                                <span >Active</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No details found!</td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
            <div class="d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

{% endblock %}
