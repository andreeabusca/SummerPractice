{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #5b8def, #2c3e50);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
            min-height: 100vh;
            padding: 40px 0;
        }

        .content-wrapper {
            max-width: 1100px;
            margin: auto;
        }

        .card {
            background-color: #ffffff;
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            padding: 30px;
            color: #2c3e50;
        }

        h1 {
            font-weight: 700;
        }

        .btn-create {
            background: linear-gradient(135deg, #5b8def, #2c3e50);
            color: #fff;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            transition: background 0.3s ease, transform 0.2s ease;
            text-decoration: none;
        }

        .btn-create:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #2c3e50, #5b8def);
        }

        .table thead {
            background-color: #f0f4f8;
        }

        .table th {
            color: #2c3e50;
            font-weight: 600;
        }

        .table td {
            color: #2f3542;
        }

        .table a {
            color: #5b8def;
            font-weight: 500;
            text-decoration: none;
        }

        .table a:hover {
            text-decoration: underline;
        }

        .no-data {
            text-align: center;
            color: #95a5a6;
            font-style: italic;
            padding: 20px;
        }

        /* PAGINATION */
        .pagination-container {
            margin-top: 30px;
            display: flex;
            justify-content: center;
        }

        .pagination {
            display: flex;
            gap: 6px;
            list-style: none;
            padding-left: 0;
        }

        .pagination li > a,
        .pagination li > span {
            background: linear-gradient(135deg, #5b8def, #2c3e50);
            color: #fff;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            text-decoration: none;
            transition: background 0.3s ease, transform 0.2s ease;
            display: inline-block;
        }

        .pagination li > a:hover {
            background: linear-gradient(135deg, #2c3e50, #5b8def);
            transform: translateY(-2px);
        }

        .pagination .current {
            background: linear-gradient(135deg, #2c3e50, #5b8def);
            font-weight: 700;
        }

        .pagination .disabled > span {
            opacity: 0.6;
            cursor: not-allowed;
        }
    </style>
{% endblock %}

{% block title %}Festival List{% endblock %}

{% block body %}
    <div class="container content-wrapper">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5">ðŸŽ¶ Festival List</h1>
            <a href="{{ path('app_festival_create') }}" class="btn btn-create">+ New Festival</a>
        </div>

        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for festival in pagination %}
                        <tr>
                            <td><a href="{{ path('app_festival_show', {festivalId: festival.id}) }}">{{ festival.id }}</a></td>
                            <td><a href="{{ path('app_festival_show', {festivalId: festival.id}) }}">{{ festival.name }}</a></td>
                            <td>{{ festival.location }}</td>
                            <td>{{ festival.startDate|date('Y-m-d') }}</td>
                            <td>{{ festival.endDate|date('Y-m-d') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="no-data">No festivals found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="pagination-container">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
