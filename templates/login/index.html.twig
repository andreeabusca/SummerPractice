{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #1c1e26; /* Softer charcoal background */
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            color: #f2f2f2;
        }

        h1 {
            text-align: center;
            font-weight: bold;
            margin: 40px 0 20px;
            color: #9f7aea; /* soft purple */
            font-size: 2.5rem;
        }

        .form-container {
            max-width: 750px;
            margin: auto;
            padding: 40px;
            background: linear-gradient(135deg, #252732, #2e303e);
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
            border: 1px solid #2f2f2f;
        }

        label {
            font-weight: 600;
            color: #c9c9d1;
        }

        input[type="email"],
        input[type="password"] {
            background-color: #2f313e;
            border: 1px solid #45475a;
            color: #ffffff;
            padding: 12px 16px;
            border-radius: 8px;
            width: 100%;
            margin-bottom: 20px;
            transition: border 0.3s ease;
        }

        input[type="email"]:focus,
        input[type="password"]:focus {
            border: 1px solid #00d1ff;
            outline: none;
            background-color: #3b3e51;
        }

        .btn-custom {
            background: linear-gradient(90deg, #00ffd0, #3b82f6, #8a2be2);
            color: #ffffff !important;
            padding: 14px 32px;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 10px;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 12px rgba(0, 255, 208, 0.2);
        }

        .btn-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(138, 43, 226, 0.5);
        }

        .btn-custom:active {
            transform: scale(0.98);
        }

        .text-center {
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_email }}" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" required>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button type="submit">login</button>
    </form>
{% endblock %}
