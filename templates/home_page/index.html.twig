{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">ShowTime</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_user_create') }}">Sign up</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Sign in</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel" data-bs-interval="1900">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/photo1.jpg" class="d-block w-100" alt="Slide 1">
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100 px-3">
                    <h1 class="carousel-title">Buckle Up...</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/photo3.jpg" class="d-block w-100" alt="Slide 2">
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100 px-3">
                    <h1 class="carousel-title">And Buy Your Ticket...</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/photo2.jpg" class="d-block w-100" alt="Slide 3">
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100 px-3">
                    <h1 class="carousel-title">It's ShowTime!</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row g-4 justify-content-center">
            {% for festival in pagination %}
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="festival-card p-4">
                        <h5 class="text-light mb-1">{{ festival.name }}</h5>
                        <h6 class="text-muted mb-2">{{ festival.location }}</h6>
                        <p class="text-secondary small">
                            {{ festival.startDate|date('Y-m-d') }} - {{ festival.endDate|date('Y-m-d') }}
                        </p>
                        <a href="#" class="btn btn-outline-info btn-sm mt-2">Details</a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

    <style>
        body {
            background-color: #1c1e26;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            color: #f2f2f2;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            background: linear-gradient(90deg, #00ffd0, #3b82f6, #9f7aea);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
        }

        .nav-link.active,
        .nav-link:hover {
            color: #00d1ff !important;
            font-weight: 600;
        }

        .carousel-inner {
            height: 80vh;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
            margin: 1.5rem auto;
            max-width: 1200px;
        }

        .carousel-inner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(0.65);
            transition: filter 0.4s ease;
        }

        .carousel-caption {
            background: rgba(28, 30, 38, 0.35);
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            display: flex !important;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .carousel-title {
            font-size: 3.2rem;
            font-weight: 800;
            color: #ffffff;
            text-shadow: 0 3px 10px rgba(0, 0, 0, 0.8);
        }

        .festival-card {
            background: linear-gradient(135deg, #252732, #2e303e);
            border: 1px solid #2f2f2f;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease-in-out;
        }

        .festival-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 14px #00ffd0cc,
            0 10px 24px #3b82f6cc,
            0 14px 34px #8a2be2cc;;
        }

        @media (max-width: 768px) {
            .carousel-title {
                font-size: 2.2rem;
            }

            .carousel-inner {
                height: 60vh;
            }
        }
        .pagination {
            display: flex;
            gap: 8px;
            padding: 12px 16px;
            background-color: #2c2f3a;
            border-radius: 12px;
            box-shadow:
                0 4px 12px #00ffd055,
                0 8px 16px #3b82f655,
                0 10px 20px #8a2be255;
        }

        .pagination li {
            list-style: none;
        }

        .pagination a,
        .pagination span {
            color: #ffffff;
            background: linear-gradient(145deg, #1e1f29, #292a36);
            border: 1px solid #444654;
            padding: 8px 14px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow:
                0 2px 6px rgba(0, 255, 208, 0.1),
                0 4px 12px rgba(138, 43, 226, 0.1);
        }

        .pagination a:hover {
            background: linear-gradient(145deg, #00ffd0, #3b82f6);
            color: #1c1e26;
            box-shadow:
                0 4px 10px rgba(0, 255, 208, 0.4),
                0 6px 16px rgba(138, 43, 226, 0.4);
            transform: translateY(-2px);
        }

        .pagination .current {
            background: #8a2be2;
            color: #ffffff;
            font-weight: 700;
            border-color: transparent;
            box-shadow:
                0 4px 12px #00ffd055,
                0 6px 16px #3b82f655;
        }
    </style>
{% endblock %}
